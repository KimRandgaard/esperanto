<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/episodeLenght"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="61:28"
        android:padding="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="10dp"
        />

    <TextView
        android:id="@+id/episodeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Elsendo de 2021-10-24"
        app:layout_constraintTop_toBottomOf="@id/episodeLenght"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="2dp"
        />

    <TextView
        android:id="@+id/episodeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/episodeName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="2dp"
        tools:text="En tiu ci epizodo ni parolas pri io kaj io. Ni ludas por vi la tago muzikon, novaÄµojn, informojn, eble io alia kiu scia..."
        />

    <ImageView
        android:id="@+id/episodeFavorite"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:padding="2dp"
        android:src="@drawable/favorite_empty"
        app:layout_constraintRight_toLeftOf="@id/episodeShare"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/episodeShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/share"
        app:layout_constraintRight_toLeftOf="@id/episodePlay"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="2dp"
        />

    <ImageView
        android:id="@+id/episodePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/little_play_button"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="2dp"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>