<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <TextView
        android:id="@+id/episodeLenght"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="2dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="61:28"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/episodeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/episodeLenght"
        tools:text="Elsendo de 2021-10-24" />

    <TextView
        android:id="@+id/episodeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="1"
        android:padding="2dp"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/episodeName"
        tools:text="En tiu ci epizodo ni parolas pri io kaj io. Ni ludas por vi la tago muzikon, novaÄµojn, informojn, eble io alia kiu scia..." />


    <ImageView
        android:id="@+id/episodeFavorite"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="4dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="0dp"
        android:src="@drawable/favorite_empty"
        app:layout_constraintRight_toLeftOf="@id/episodeShare"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/episodeShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginRight="4dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="2dp"
        android:src="@drawable/share"
        app:layout_constraintRight_toLeftOf="@id/episodePlay"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/episodePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="2dp"
        android:src="@drawable/little_play_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>