<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/backButton_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_button"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/episodePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/episode_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shareEpisode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/share_episode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/episodePicture" />

    <ImageView
        android:id="@+id/speceficEpisodeFavorit"
        android:layout_width="44dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/favorite_emty_episode"
        app:layout_constraintRight_toLeftOf="@+id/shareEpisode"
        android:layout_marginRight="20dp"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/episodePicture"
        android:focusable="true" />

    <ImageView
        android:id="@+id/playEpisode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/play_episode"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/shareEpisode"
        app:layout_constraintTop_toBottomOf="@id/episodePicture" />

    <TextView
        android:id="@+id/channelName_OnEpisode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Muzaiko"
        android:padding="4dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/speceficEpisodeFavorit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/episodeName_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        tools:text="Elsendo de 2021-10-24"
        app:layout_constraintTop_toBottomOf="@id/channelName_OnEpisode"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="4dp"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:id="@+id/episodeLenght_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="61:28"
        app:layout_constraintTop_toBottomOf="@id/episodeName_episode"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="4dp"
        android:layout_marginLeft="8dp"
        android:textSize="10dp"
        />

    <TextView
        android:id="@+id/episodeDescription_episode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:padding="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/episodeLenght_episode"

        tools:text="Pri la danĝero de iksodoj rakontas Lisa, la intervjuon muntis: Natalija Pendjiur (dua parto)

Sara Spanò voĉlegas por vi rakonton de Júlia Sigmond: 'La Bluaj Floroj' kadre de MondaFest' 2020 organizita de UEA

La profesoro de Esperanto: Zamenhofaj meditoj de Federico Gobbo " />


</androidx.constraintlayout.widget.ConstraintLayout>